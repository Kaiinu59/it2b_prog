using System;
class Program
{
    
    static void Main()
    {
        Console.Write("Zadej cislo: ");
        string originalstring = Console.ReadLine();
        string reversestring = string.Empty;
        for (int i = originalstring.Length - 1; i >= 0; i--)
        {
            reversestring += originalstring[i];
        }
        int Sum = 0;
       
        for (int i = 0; i < originalstring.Length; i++)
        {
            int num = int.Parse(reversestring);
          if (num % 2 == 0)
            {
                Sum -= num;
            } 
            else
            {
                Sum += num;
            }    
         
        }
        int ModuleSum = Math.Abs(Sum);
        Console.WriteLine($"Vsledek po obraceni: {reversestring}");
        Console.WriteLine($"Absolutni hodnota vysledku: {ModuleSum}");

    }
}
